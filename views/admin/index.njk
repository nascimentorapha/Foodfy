{% extends "layout-admin.njk" %}

{% block content %}

    <div class="content">
        <h2>Gerenciar Receitas</h2>
    </div>
    <section class="card_admin">
        
        {% for recipes in recipe %}

        <div class="card_admin_inside" id="{{recipes.title}}">
            <div class="card_image_container" >
                <img src="{{recipes.image}}" alt="Imagem de {{recipes.title}}">
            </div>
            <div class="card_info_admin">
                <div class="card_content">
                    <h2>{{ recipes.title }}</h2>
                </div>
                <div class="card_info">
                    <p>por {{recipes.author}}</p> 
                </div>
                <div class="visualize">
                    <a href="/admin/recipes/{{recipes.id}}">Visualizar</a>
                </div>
            </div>
        </div>

        {% endfor %}
        
    </section>

    
    <script src="scripts.js"></script>

{% endblock %}